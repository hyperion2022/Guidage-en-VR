#pragma kernel main0

sampler2D input;
RWTexture2D<float4> output;
float4 box;

[numthreads(8,8,1)]
void main0(uint2 id : SV_DispatchThreadID)
{
    float x = id.x / 512.0 * box.z + box.x;
    float y = id.y / 512.0 * box.w + box.y;
    output[uint2(id.x, 512 - 1 - id.y)] = tex2Dgrad(input, float2(x, y), 0.0, 0.0);
}
